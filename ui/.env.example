# ===========================================
# CAIPE UI Environment Variables
# ===========================================
#
# Copy this file to .env.local and fill in your values.
#
# Env var naming: Use CLEAN names (no NEXT_PUBLIC_ prefix needed).
# The config system reads process.env server-side and injects
# client-safe values via window.__APP_CONFIG__ at request time.
#
# NEXT_PUBLIC_ prefixed names still work for backward compatibility
# but are deprecated. Use the clean names below.

# ============================================
# Core URLs
# ============================================

# A2A Base URL - CAIPE Supervisor endpoint
# Default (dev): http://localhost:8000
# Default (prod): http://caipe-supervisor:8000
A2A_BASE_URL=http://localhost:8000

# RAG Server URL for knowledge base operations
# Default (dev): http://localhost:9446
# Default (prod): http://rag-server:9446
# RAG_URL=http://localhost:9446

# ============================================
# Feature Flags
# ============================================

# Enable SSO authentication (default: false)
# Set to "true" to require OIDC login
SSO_ENABLED=true

# Enable sub-agent streaming cards in chat (default: false)
ENABLE_SUBAGENT_CARDS=true

# Enable RAG knowledge bases (default: true)
# RAG_ENABLED=true

# Preview/beta mode banner (default: false)
# PREVIEW_MODE=true

# Allow admin access without SSO in development (default: false)
# WARNING: Do NOT enable in production
# ALLOW_DEV_ADMIN_WHEN_SSO_DISABLED=true

# ============================================
# NextAuth Configuration
# ============================================

# Secret for JWT encryption - Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-here

# Base URL of your application
NEXTAUTH_URL=http://localhost:3000

# ============================================
# OIDC/SSO Configuration
# ============================================

# OIDC Provider Issuer URL (e.g., https://your-idp.com/oidc)
OIDC_ISSUER=https://your-oidc-provider.com

# OIDC Client ID
OIDC_CLIENT_ID=your-client-id

# OIDC Client Secret
OIDC_CLIENT_SECRET=your-client-secret

# Required group for authorization (optional, default: backstage-access)
# Leave empty or comment out to allow all authenticated users
# OIDC_REQUIRED_GROUP=backstage-access

# Admin group for elevated privileges (optional)
# OIDC_REQUIRED_ADMIN_GROUP=admin-group

# Custom OIDC group claim name (optional)
# If not set, will auto-detect from: memberOf, groups, group, roles, cognito:groups
# OIDC_GROUP_CLAIM=groups

# ============================================
# Token Refresh Configuration
# ============================================

# Enable automatic token refresh using OIDC refresh tokens (default: true)
# Set to "false" if your OIDC provider doesn't support offline_access scope
# When disabled, users will see expiry warnings but won't auto-refresh
# OIDC_ENABLE_REFRESH_TOKEN=true

# ============================================
# Branding & UI (all optional)
# ============================================

# Application name (default: CAIPE)
# APP_NAME=CAIPE

# Main tagline (default: Multi-Agent Workflow Automation)
# TAGLINE="Multi-Agent Workflow Automation"

# Description (default: Where Humans and AI agents collaborate...)
# DESCRIPTION="Where Humans and AI agents collaborate to deliver high quality outcomes."

# Logo URL - relative or absolute (default: /logo.svg)
# LOGO_URL=/logo.svg

# Logo style: "default" (original colors) or "white" (inverted for dark backgrounds)
# LOGO_STYLE=default

# Gradient colors for UI accents (CSS color values)
# GRADIENT_FROM=hsl(173,80%,40%)
# GRADIENT_TO=hsl(270,75%,60%)

# Spinner/loading indicator color (CSS color value)
# SPINNER_COLOR=#00bcd4

# Show "Powered by OSS caipe.io" footer (default: true)
# SHOW_POWERED_BY=true

# Support contact email (default: support@example.com)
# SUPPORT_EMAIL=support@example.com

# ============================================
# Storage Configuration (Optional)
# ============================================
#
# MongoDB mode: Persistent, shareable, team collaboration
#   - Set both MONGODB_URI and MONGODB_DATABASE
#   - Conversations stored in MongoDB
#   - Admin features enabled
#
# localStorage mode (default): Browser-only storage
#   - Comment out or omit MONGODB_URI
#   - Conversations not shareable
#
# MONGODB_URI=mongodb://admin:changeme@localhost:27017
# MONGODB_DATABASE=caipe

# ============================================
# Langfuse User Feedback (Optional)
# ============================================

# LANGFUSE_SECRET_KEY=sk-lf-your-secret-key
# LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key
# LANGFUSE_HOST=https://your-langfuse-instance.com
