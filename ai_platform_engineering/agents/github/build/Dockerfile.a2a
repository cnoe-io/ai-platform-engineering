FROM python:3.13-slim

# Create non-root user and add to docker group for Docker socket access
RUN groupadd -r appuser && useradd -r -g appuser -u 1001 appuser

WORKDIR /app

# Install Docker CLI
RUN apt-get update && \
    apt-get install -y \
    apt-transport-https \
    ca-certificates \
    curl \
    gnupg \
    lsb-release && \
    curl -fsSL https://download.docker.com/linux/debian/gpg | gpg --dearmor -o /usr/share/keyrings/docker-archive-keyring.gpg && \
    echo \
    "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/docker-archive-keyring.gpg] https://download.docker.com/linux/debian \
    $(lsb_release -cs) stable" | tee /etc/apt/sources.list.d/docker.list > /dev/null && \
    apt-get update && \
    apt-get install -y docker-ce-cli && \
    rm -rf /var/lib/apt/lists/*

# Add appuser to docker group for Docker socket access
RUN groupadd -f docker && usermod -aG docker appuser

COPY --chown=appuser:appuser . /app/

# Install uv and use it to install the package
RUN pip install uv

# Create UV cache directory for appuser and set permissions
RUN mkdir -p /home/appuser/.cache/uv && chown -R appuser:appuser /home/appuser/.cache

RUN --mount=type=cache,target=/home/appuser/.cache/uv \
    uv sync --locked --no-dev

# Change ownership of the entire app directory
RUN chown -R appuser:appuser /app

# Switch to non-root user
USER appuser

EXPOSE 8000

CMD ["uv", "run", "python", "-m", "agent_github", "--host", "0.0.0.0", "--port", "8000"]
