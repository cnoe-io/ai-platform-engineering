{
  "name": "GitHub Agent",
  "description": "Agent for managing GitHub repository operations and resources",
  "version": "1.0.0",
  "input_schema": {
    "type": "object",
    "properties": {
      "github_input": {
        "type": "object",
        "properties": {
          "messages": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["human", "assistant"]
                },
                "content": {
                  "type": "string"
                }
              },
              "required": ["type", "content"]
            }
          }
        },
        "required": ["messages"]
      }
    },
    "required": ["github_input"]
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "github_output": {
        "type": "object",
        "properties": {
          "messages": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["human", "assistant"]
                },
                "content": {
                  "type": "string"
                }
              },
              "required": ["type", "content"]
            }
          }
        },
        "required": ["messages"]
      }
    },
    "required": ["github_output"]
  },
  "mcp": {
    "servers": {
      "github": {
        "command": "docker",
        "args": [
          "run",
          "-i",
          "--rm",
          "-e",
          "GITHUB_PERSONAL_ACCESS_TOKEN",
          "ghcr.io/github/github-mcp-server"
        ],
        "env": {
          "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
        }
      }
    }
  }
}