{
  "name": "cnoe_agent_slack",
  "version": "0.1.0",
  "schema_version": "0.0.1",
  "description": "Slack Agent powered by LangGraph and LangChain MCP Adapters.",
  "authors": [
    "CNOE Contributors"
  ],
  "created_at": "2024-03-21T00:00:00Z",
  "skills": [
    {
      "class_uid": 10201
    }
  ],
  "locators": [
    {
      "type": "docker-image",
      "url": "ghcr.io/cnoe-io/agent-slack:latest"
    },
    {
      "type": "source-code",
      "url": "https://github.com/cnoe-io/agent-slack"
    }
  ],
  "extensions": [
    {
      "name": "oasf.agntcy.org/feature/runtime/manifest",
      "data": {
        "deployment": {
          "agent_deps": [],
          "deployment_options": [
            {
              "type": "source_code",
              "name": "source_code_local",
              "url": "./../../../",
              "framework_config": {
                "framework_type": "langgraph",
                "graph": "agent_slack.graph:AGENT_GRAPH"
              }
            },
            {
              "type": "docker",
              "name": "docker",
              "image": "ghcr.io/cnoe-io/agent-slack:latest"
            }
          ],
          "env_vars": [
            {
              "desc": "LLM provider",
              "name": "LLM_PROVIDER",
              "required": true
            },
            {
              "desc": "Azure OpenAI endpoint for LLM",
              "name": "AZURE_OPENAI_ENDPOINT"
            },
            {
              "desc": "Azure OpenAI API key",
              "name": "AZURE_OPENAI_API_KEY"
            },
            {
              "desc": "Azure OpenAI deployment",
              "name": "AZURE_OPENAI_DEPLOYMENT"
            },
            {
              "desc": "Azure OpenAI API version",
              "name": "AZURE_OPENAI_API_VERSION"
            },
            {
              "desc": "Google API key",
              "name": "GOOGLE_API_KEY"
            },
            {
              "desc": "Slack Bot Token (xoxb-)",
              "name": "SLACK_BOT_TOKEN",
              "required": true
            },
            {
              "desc": "Slack App Token (xapp-)",
              "name": "SLACK_APP_TOKEN",
              "required": true
            },
            {
              "desc": "Slack Signing Secret",
              "name": "SLACK_SIGNING_SECRET",
              "required": true
            },
            {
              "desc": "Slack Client Secret",
              "name": "SLACK_CLIENT_SECRET"
            },
            {
              "desc": "Slack Team ID",
              "name": "SLACK_TEAM_ID"
            }
          ]
        },
        "acp": {
          "version": "1.0.0",
          "framework": "langgraph",
          "graph": "agent_slack.graph:AGENT_GRAPH",
          "capabilities": {
            "threads": false,
            "interrupts": false,
            "callbacks": false
          },
          "input": {
            "$defs": {
              "Message": {
                "properties": {
                  "type": {
                    "$ref": "#/$defs/Type",
                    "description": "indicates the originator of the message, a human or an assistant"
                  },
                  "content": {
                    "description": "the content of the message",
                    "title": "Content",
                    "type": "string"
                  }
                },
                "required": [
                  "type",
                  "content"
                ],
                "title": "Message",
                "type": "object"
              },
              "Type": {
                "enum": [
                  "human",
                  "assistant",
                  "ai"
                ],
                "title": "Type",
                "type": "string"
              }
            },
            "properties": {
              "slack_input": {
                "messages": {
                  "anyOf": [
                    {
                      "items": {
                        "$ref": "#/$defs/Message"
                      },
                      "type": "array"
                    },
                    {
                      "type": "null"
                    }
                  ],
                  "default": null,
                  "title": "Messages"
                },
                "type": "object"
              }
            },
            "title": "InputState",
            "type": "object"
          },
          "output": {
            "$defs": {
              "Message": {
                "properties": {
                  "type": {
                    "$ref": "#/$defs/Type",
                    "description": "indicates the originator of the message, a human or an assistant"
                  },
                  "content": {
                    "description": "the content of the message",
                    "title": "Content",
                    "type": "string"
                  }
                },
                "required": [
                  "type",
                  "content"
                ],
                "title": "Message",
                "type": "object"
              },
              "Type": {
                "enum": [
                  "human",
                  "assistant",
                  "ai"
                ],
                "title": "Type",
                "type": "string"
              }
            },
            "properties": {
              "slack_output": {
                "messages": {
                  "anyOf": [
                    {
                      "items": {
                        "$ref": "#/$defs/Message"
                      },
                      "type": "array"
                    },
                    {
                      "type": "null"
                    }
                  ],
                  "default": null,
                  "title": "Messages"
                },
                "type": "object"
              }
            },
            "title": "OutputState",
            "type": "object"
          },
          "config": {
            "type": "object",
            "properties": {
              "model": {
                "type": "string",
                "description": "The model to use for the agent"
              },
              "temperature": {
                "type": "number",
                "description": "The temperature to use for the model"
              }
            }
          }
        }
      }
    }
  ]
}